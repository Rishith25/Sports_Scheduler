<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sessions</title>
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/style.css" />
    <script>
        var token = document
            .querySelector('meta[name="csrf-token"]')
            .getAttribute("content");

        function deleteSport(id) {
            fetch(`/sports/${id}`, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    "_csrf": token,
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.assign("/home");
                    }
                })
                .catch((err) => {
                    console.error(err)
                })
        }
    </script>
</head>

<body>
    <nav class="bg-gray-800">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <div class="text-white text-lg font-semibold">
                <%= title %>
                    <span class="text-gray-300 mr-4 px-2 py-1 rounded hover">
                        <a href="/home">Home</a>
                    </span>
            </div>

            <div>
                <span class="text-gray-300 mr-4">Welcome <%= userName %></span>
                <a href="/signout" class="inline-block px-4 py-2 text-white bg-red-600 rounded-md font-medium">Sign
                    Out</a>
            </div>
        </div>
    </nav>
    <div class="grid grid-cols-6 pt-10">
        <div class="col-start-3 col-span-2">
            <div class="font-semibold text-gray-600">
                <span>
                    <h1 class="text-3xl">
                        <%= sportsname %>
                    </h1>
                </span>
                <span>
                    <a href="/sports/<%= sportsId %>/editSport" class="ml-6 text-green-600 underline">
                        <span> Edit Sport </span></a>
                </span>
                <span>
                    <a href="/home" class="ml-6 text-green-600 underline" onclick="deleteSport(<%= sportsId %>)">Delete
                        Sport
                    </a></span>
            </div>
            <hr>
            <hr>

            <div>
                <h1 class="text-2xl font-semibold mb-4">Upcoming Sessions</h1>
                <table class="border border-gray-300 rounded">
                    sportsId : <%= sportsId %>
                        <br>
                        <thead>
                            <tr>
                              <th class="p-4">Session Date</th>
                            </tr>
                          </thead>
                        <%= sessionsList.length %> Sessions Avaiable
                            <% for(var i=0 ; i < sessionsList.length ; i++){ %>
                                <tr>
                                    <td>
                                        <div class="p-4">
                                            <a href="/sessions/<%= sessionsList[i].id %>" class="text-blue-600 hover:underline">
                                                <%= sessionsList[i].sessionDate.toString().substring(0,21) %>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                </table>
            </div>
            <div class="mt-4">
                <a class="p-2 bg-green-500 text-white rounded font-medium mr-2"" href="/sports/<%= sportsId %>/new-session">Create a new session</a>
            </div>
            <div>
                <a class="text-blue-600 hover:underline" href="#">View Previous Sessions</a>
            </div>

</body>

</html>