<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./css/styles.css" />
  </head>

  <body class="bg-gray-200">
    <nav class="bg-gray-800">
      <div
        class="container mx-auto px-4 py-2 flex justify-between items-center"
      >
        <div class="text-white text-lg font-semibold">
          <%= title %>
          <span class="text-gray-300 mr-4 px-2 py-1 rounded hover">
            <a href="/home">Home</a>
          </span>
        </div>

        <div>
          <span class="text-gray-300 mr-4">Welcome <%= userName %></span>
          <a
            href="/signout"
            class="inline-block px-4 py-2 text-white bg-red-600 rounded-md font-medium"
            >Sign Out</a
          >
        </div>
      </div>
    </nav>
    <div class="container mx-auto py-8">
      <div class="grid grid-cols-6 gap-4">
        <div class="col-start-3 col-span-2 bg-white rounded-lg shadow-md p-8">
          <div class="mb-4 flex justify-center"><%- include('header') %></div>

          <% if(user.role == null) {%>
          <div class="flex justify-center mt-4">
            <a
              href="/createsport"
              class="inline-block px-6 py-2 text-white bg-blue-500 rounded-md font-medium mr-2"
              >Create a Sport</a
            >
            <a
              href="#"
              class="inline-block px-6 py-2 text-white bg-blue-500 rounded-md font-medium mr-2"
              >View Reports</a
            >
          </div>
          <% } %>

          <div class="mt-8">
            <h3 class="text-2xl font-semibold mb-4 underline">
              Your Upcoming Sessions
            </h3>
            <% if(sessionDetails.length > 0){%> <% for(var i=0; i <
            sessionDetails.length; i++) { %>
            <div class="border border-gray-300 rounded-md p-4 mb-4">
              <a href="/sessions/<%= sessionDetails[i].id %>">
                <p class="text-lg font-semibold mb-2">
                  <%= sessionDetails[i].sessionDate.toLocaleString('en-US',
                  {day: '2-digit' , month: '2-digit' , year: 'numeric' , hour:
                  '2-digit' , minute: '2-digit' , hour12: true}) %>
                </p>
                <% if(sessionDetails[i].sessionCount==1 ) { %>
                <p class="text-sm text-gray-600">Last Slot</p>
                <% } else if(sessionDetails[i].sessionCount==0 ) { %>
                <p class="text-sm text-gray-600">Fully Booked</p>
                <% } else { %>
                <p class="text-sm text-gray-600">
                  <%= sessionDetails[i].sessionCount + " slots" %>
                </p>
                <% } %> <% if(sessionDetails[i].isCancelled) { %>
                <h3 class="text-red-600">Cancelled</h3>
                <% } %>
              </a>
            </div>
            <% } %> <% } else { %>
            <h2 class="text-2xl font-semibold text-red-600">
              There are NO Upcoming Sessions Available. Join to see here
            </h2>
            <% } %>
          </div>
          <div class="mt-8">
            <%- include('sports', { title: "Sports", "data": SportsList }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
